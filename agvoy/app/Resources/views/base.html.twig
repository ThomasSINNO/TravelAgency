<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        	<link rel="stylesheet" href="{{ asset('css/over_bootstrap.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
<header>
{% block header %}


            
       <cont class="fixed_top min_width_100 container ">
        	<div class="row">  
        		<col_borderline class="col-sm-11 min_width_100">   
        			<div class="row">     	
        			<div class="col-sm-offset-1 col-sm-3">
        				<div class="row">
       						<t0 class="col-sm-4"><home1><a href="{{ path('homepage') }}">Accueil</a></home1></t0>
        					<t0 class="col-sm-4"><a href="{{ path('circuit_index') }}">Circuits</a></t0>
        					<t0 class="col-sm-4"><a href="{{ path('helppage') }}">Aide</a></t0> 
        				</div>
        			</div>
        			<div class="col-sm-offset-4 col-sm-3">
        				
                        {% if is_granted('ROLE_ADMIN') %}{#si on est adm on a acces a tout #}
        					<div class="row">
        							<t0 class="col-sm-4"><a href="{{ path('back_office_index') }}">Back_office</a></t0>
        							<t0 class="col-sm-4"><a href="{{ path('fos_user_registration_register') }}">Register</a></t0>
        							<t0 class="col-sm-4"><a href="{{ path('fos_user_security_logout') }}">Logout</a></t0>
							</div>
        			    {% elseif is_granted('ROLE_USER') %}{#si on est membre #}
        				    <div class="row">
        							<t0 class="col-sm-offset-4 col-sm-4"><a href="{{ path('back_office_index') }}">Back_office</a></t0>
        							<t0 class="col-sm-4"><a href="{{ path('fos_user_security_logout') }}">Logout</a></t0>
							</div>
        				{% else %}	
        					<div class="row">
        							<t0 class="col-sm-offset-8 col-sm-4"><a href="{{ path('fos_user_security_login') }}">Login</a></t0>
							</div>	
        				{% endif %}
        			</div> 			
        		</div> 
          </col_borderline> 			
         </div> 
        </cont> 
          
{% endblock %}
</header> 
<body>     
    	<div class="container body-container">
            {% block body %}
    		<div class="row">
    			<f0 class="col-sm-offset-1 col-sm-10 ">
                       {{ include('default/_flash_messages.html.twig') }}
           		</f0>
        	</div>
    		<div class="row">
    			<n0 class="col-sm-offset-1 col-sm-10 ">
                        {% block main %}{% endblock %}
           		</n0>
        	</div>           

            {% endblock %}
        </div>
    	
        {% block footer %}<footer><p>FOOTER</p></footer>{% endblock %}
        {% block javascripts %}
        	<script src="{{ asset('js/jquery.min.js') }}"></script>
        	<script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
